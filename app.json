
{
  "expo": {
    "name": "Boathouse Connect",
    "slug": "boathouse-connect-app",
    "version": "1.1.0",
    "orientation": "portrait",
    "icon": "./assets/images/ec64137a-b4be-4bf1-bf5b-7667ff8c8d95.png",
    "scheme": "mcloones",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/43c91958-d4c9-4b12-8d2a-51e85de57f94.jpeg",
      "resizeMode": "contain",
      "backgroundColor": "#E8F1F8"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.mcloones.boathouseconnect",
      "buildNumber": "1.1",
      "infoPlist": {
        "UIBackgroundModes": [
          "remote-notification"
        ],
        "NSPhotoLibraryUsageDescription": "Boathouse Connect needs access to your photos so you can upload a profile picture to personalize your account."
      },
      "icon": "./assets/images/ec64137a-b4be-4bf1-bf5b-7667ff8c8d95.png",
      "googleServicesFile": "./googleservice-info.plist"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/ec64137a-b4be-4bf1-bf5b-7667ff8c8d95.png",
        "backgroundColor": "#E8F1F8"
      },
      "package": "com.mcloonesboathouse.newboathouseconnectapp",
      "versionCode": 2,
      "icon": "./assets/images/ec64137a-b4be-4bf1-bf5b-7667ff8c8d95.png",
      "softwareKeyboardLayoutMode": "pan",
      "windowSoftInputMode": "adjustPan",
      "permissions": [
        "android.permission.POST_NOTIFICATIONS",
        "android.permission.RECEIVE_BOOT_COMPLETED",
        "android.permission.SCHEDULE_EXACT_ALARM"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/ec64137a-b4be-4bf1-bf5b-7667ff8c8d95.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "backgroundColor": "#E8F1F8",
          "image": "./assets/images/43c91958-d4c9-4b12-8d2a-51e85de57f94.jpeg",
          "imageWidth": 280
        }
      ],
      [
        "@react-native-firebase/app",
        {
          "ios": {
            "googleServicesFile": "./googleservice-info.plist"
          }
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/images/ec64137a-b4be-4bf1-bf5b-7667ff8c8d95.png",
          "color": "#4A90E2",
          "sounds": [],
          "enableBackgroundRemoteNotifications": true
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "eas": {
        "projectId": "f7f98351-f034-4baa-8eb8-ef50cd4aaf7b"
      }
    }
  }
}
